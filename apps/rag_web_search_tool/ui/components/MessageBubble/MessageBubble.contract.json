    "root": ["surface.primary", "surface.secondary", "surface.destructive", "surface.muted", "radius.lg"],
    "header": ["text.xs", "spacing.2"],
    "content": ["text.sm"],
    "entities": ["spacing.3", "border.divider"],
    "reasoning": ["spacing.3", "border.divider"]
  },
  "ssr": { "hydrateOn": "interaction" },
  "rtl": { "flipIcon": false }
