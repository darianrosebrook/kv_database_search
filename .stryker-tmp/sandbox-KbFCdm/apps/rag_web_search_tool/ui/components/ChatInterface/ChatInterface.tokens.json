{
  "$schema": "../../../ui/designTokens/designTokens.schema.json",
  "prefix": "chatInterface",
  "tokens": {
    "container": {
      "background": "{semantic.color.background.elevated}",
      "border": "{semantic.color.border.subtle}",
      "borderRadius": "{semantic.shape.radius.large}",
      "shadow": "{semantic.elevation.surface.raised}",
      "height": "100%"
    },
    "header": {
      "padding": "{semantic.spacing.padding.container}",
      "borderBottom": "{semantic.color.border.subtle}",
      "background": "transparent"
    },
    "title": {
      "fontSize": "{semantic.typography.heading.05}",
      "fontWeight": "{semantic.typography.fontWeight.medium}",
      "color": "{semantic.color.foreground.primary}",
      "lineHeight": "{semantic.typography.lineHeight.heading}"
    },
    "subtitle": {
      "fontSize": "{semantic.typography.body.small.fontSize}",
      "color": "{semantic.color.foreground.secondary}",
      "lineHeight": "{semantic.typography.lineHeight.body}"
    },
    "contextSection": {
      "marginTop": "{core.spacing.size.05}",
      "gap": "{core.spacing.size.03}"
    },
    "contextLabel": {
      "fontSize": "{semantic.typography.caption.02}",
      "fontWeight": "{semantic.typography.fontWeight.medium}",
      "color": "{semantic.color.foreground.secondary}"
    },
    "contextChips": {
      "gap": "{core.spacing.size.03}",
      "flexWrap": "wrap"
    },
    "scrollArea": {
      "flex": "1",
      "padding": "{semantic.spacing.padding.container}",
      "overflow": "hidden"
    },
    "messagesList": {
      "gap": "{core.spacing.size.06}",
      "paddingBottom": "{core.spacing.size.06}"
    },
    "emptyState": {
      "minHeight": "200px",
      "textAlign": "center",
      "gap": "{core.spacing.size.06}"
    },
    "emptyStateIcon": {
      "width": "{core.spacing.size.09}",
      "height": "{core.spacing.size.09}",
      "background": "{semantic.color.background.secondary}",
      "borderRadius": "{semantic.shape.radius.full}"
    },
    "emptyStateIconInner": {
      "width": "{core.spacing.size.07}",
      "height": "{core.spacing.size.07}",
      "color": "{semantic.color.foreground.secondary}"
    },
    "message": {
      "gap": "{core.spacing.size.05}"
    },
    "messageAvatar": {
      "width": "{core.spacing.size.08}",
      "height": "{core.spacing.size.08}",
      "borderRadius": "{semantic.shape.radius.full}",
      "flexShrink": "0"
    },
    "messageAvatarUser": {
      "background": "{semantic.color.background.brand}"
    },
    "messageAvatarBot": {
      "background": "{semantic.color.background.accent}"
    },
    "messageAvatarError": {
      "background": "{semantic.color.status.danger}"
    },
    "messageContent": {
      "flex": "1",
      "minWidth": "0"
    },
    "messageBubble": {
      "borderRadius": "{semantic.shape.radius.medium}",
      "padding": "{core.spacing.size.05}"
    },
    "messageBubbleUser": {
      "background": "{semantic.color.background.secondary}"
    },
    "messageBubbleBot": {
      "background": "{semantic.color.background.elevated}",
      "border": "{semantic.color.border.subtle}"
    },
    "messageBubbleError": {
      "background": "{semantic.color.background.dangerSubtle}",
      "border": "{semantic.color.border.danger}"
    },
    "suggestionsContainer": {
      "marginTop": "{core.spacing.size.06}",
      "padding": "{core.spacing.size.05}",
      "background": "{semantic.color.background.secondary}",
      "borderRadius": "{semantic.shape.radius.medium}",
      "border": "{semantic.color.border.subtle}"
    },
    "suggestionsHeader": {
      "gap": "{core.spacing.size.03}",
      "marginBottom": "{core.spacing.size.03}"
    },
    "suggestionsIcon": {
      "width": "{core.spacing.size.06}",
      "height": "{core.spacing.size.06}",
      "color": "{semantic.color.status.warning}"
    },
    "suggestionsTitle": {
      "fontSize": "{semantic.typography.body.small.fontSize}",
      "fontWeight": "{semantic.typography.fontWeight.medium}"
    },
    "suggestionsGrid": {
      "gap": "{core.spacing.size.03}",
      "flexWrap": "wrap"
    },
    "footer": {
      "padding": "{semantic.spacing.padding.container}",
      "borderTop": "{semantic.color.border.subtle}",
      "background": "{semantic.color.background.primary}"
    }
  }
}
