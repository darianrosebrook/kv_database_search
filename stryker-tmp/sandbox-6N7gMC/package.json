{
  "name": "obsidian-rag",
  "version": "1.0.0",
  "description": "Obsidian Knowledge Base RAG - Semantic search and knowledge graph for Obsidian vaults",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "setup": "tsx src/scripts/setup.ts",
    "clear-db": "tsx src/scripts/clear-db.ts",
    "ingest": "tsx src/scripts/ingest-obsidian.ts",
    "ingest-multi-modal": "tsx src/scripts/ingest-multi-modal.ts",
    "search": "tsx src/scripts/search.ts",
    "validate": "tsx src/scripts/validate.ts",
    "graph-demo": "tsx src/scripts/graph-demo.ts",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "test:unit": "vitest run tests/unit",
    "test:unit:multi-modal": "vitest run tests/unit/multi-modal.test.ts tests/unit/multi-modal-ingest.test.ts tests/unit/ingest-multi-modal.test.ts tests/unit/pdf-processor.test.ts tests/unit/ocr-processor.test.ts tests/unit/office-processor.test.ts tests/unit/speech-processor.test.ts",
    "test:integration": "vitest run tests/integration",
    "test:integration:multi-modal": "vitest run tests/integration/multi-modal.integration.test.ts",
    "test:contract": "vitest run tests/contract",
    "test:e2e": "vitest run tests/e2e",
    "test:performance": "tsx tools/benchmark/performance.ts",
    "perf:monitor": "tsx tools/benchmark/monitor.ts",
    "perf:budgets": "tsx tools/benchmark/performance.ts",
    "test:mutation": "stryker run",
    "test:coverage": "vitest run --coverage",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:contract",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .js",
    "lint:fix": "eslint src --ext .ts,.js --fix",
    "dep:audit": "npm audit",
    "dep:check": "npx depcheck",
    "gates:coverage": "tsx tools/caws/gates.ts coverage --tier 2",
    "gates:mutation": "tsx tools/caws/gates.ts mutation --tier 2",
    "gates:contracts": "tsx tools/caws/gates.ts contracts --tier 2",
    "gates:trust": "tsx tools/caws/trust.ts calculate",
    "caws:validate": "tsx tools/caws/validate.ts",
    "caws:provenance": "tsx tools/caws/provenance.ts",
    "quality:check": "npm run typecheck && npm run lint && npm run dep:audit && npm run test:all",
    "ci": "npm run quality:check && npm run gates:coverage && npm run gates:contracts"
  },
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "dotenv": "^16.3.1",
    "fastify": "^4.24.3",
    "gray-matter": "^4.0.3",
    "mammoth": "^1.11.0",
    "ollama": "^0.5.0",
    "pdf-parse": "^1.1.1",
    "pg": "^8.11.3",
    "pino-pretty": "^10.3.1",
    "sherpa-onnx": "^1.12.14",
    "tesseract.js": "^6.0.1",
    "xlsx": "^0.18.5",
    "zod": "^4.1.9"
  },
  "devDependencies": {
    "@stryker-mutator/core": "^8.7.1",
    "@stryker-mutator/vitest-runner": "^8.7.1",
    "@testcontainers/postgresql": "^10.7.2",
    "@types/node": "^24.5.1",
    "@types/pg": "^8.10.9",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitest/coverage-v8": "^3.2.4",
    "ajv": "^8.12.0",
    "eslint": "^8.57.0",
    "fast-check": "^3.15.1",
    "playwright": "^1.40.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "obsidian",
    "rag",
    "knowledge-graph",
    "embeddings",
    "ollama",
    "pgvector",
    "semantic-search"
  ],
  "author": "drosebrook",
  "license": "MIT"
}
