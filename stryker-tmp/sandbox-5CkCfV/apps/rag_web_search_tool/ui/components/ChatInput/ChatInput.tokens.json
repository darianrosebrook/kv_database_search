{
  "$schema": "../../../ui/designTokens/designTokens.schema.json",
  "prefix": "chatInput",
  "tokens": {
    "container": {
      "gap": "{core.spacing.size.05}"
    },
    "pastedContentPreview": {
      "background": "{semantic.color.background.secondary}",
      "border": "{semantic.color.border.subtle}",
      "borderRadius": "{semantic.shape.radius.medium}",
      "padding": "{core.spacing.size.05}"
    },
    "pastedContentHeader": {
      "display": "flex",
      "alignItems": "center",
      "gap": "{core.spacing.size.04}",
      "marginBottom": "{core.spacing.size.04}"
    },
    "pastedContentIcon": {
      "width": "{core.spacing.size.06}",
      "height": "{core.spacing.size.06}",
      "color": "{semantic.color.foreground.secondary}"
    },
    "pastedContentLabel": {
      "fontSize": "{semantic.typography.body.small.fontSize}",
      "fontWeight": "{semantic.typography.fontWeight.medium}"
    },
    "pastedContentBadge": {
      "fontSize": "{semantic.typography.caption.03}"
    },
    "pastedContentCloseButton": {
      "marginLeft": "auto",
      "height": "{core.spacing.size.07}",
      "width": "{core.spacing.size.07}",
      "padding": "0"
    },
    "pastedContentCode": {
      "fontSize": "{semantic.typography.caption.03}",
      "background": "{semantic.color.background.elevated}",
      "borderRadius": "{semantic.shape.radius.small}",
      "padding": "{core.spacing.size.04}",
      "overflowX": "auto",
      "maxHeight": "128px"
    },
    "form": {
      "gap": "{core.spacing.size.05}"
    },
    "inputContainer": {
      "position": "relative",
      "display": "flex",
      "alignItems": "flex-end",
      "background": "{semantic.color.background.elevated}",
      "border": "{semantic.color.border.subtle}",
      "borderRadius": "{semantic.shape.radius.large}",
      "transition": "all 0.2s ease"
    },
    "inputContainerFocused": {
      "borderColor": "{semantic.color.border.focus}"
    },
    "textarea": {
      "flex": "1",
      "minHeight": "60px",
      "maxHeight": "200px",
      "resize": "none",
      "paddingRight": "{core.spacing.size.10}",
      "paddingY": "{core.spacing.size.05}",
      "paddingX": "{core.spacing.size.06}",
      "background": "transparent",
      "border": "0",
      "borderRadius": "{semantic.shape.radius.large}",
      "outline": "none"
    },
    "submitButton": {
      "position": "absolute",
      "bottom": "{core.spacing.size.04}",
      "right": "{core.spacing.size.04}",
      "height": "{core.spacing.size.08}",
      "width": "{core.spacing.size.08}",
      "padding": "0",
      "background": "{semantic.color.background.accent}",
      "color": "{semantic.color.foreground.onAccent}",
      "borderRadius": "{semantic.shape.radius.medium}",
      "transition": "all 0.2s ease"
    },
    "submitButtonHover": {
      "background": "{semantic.color.background.accentHover}"
    },
    "submitButtonDisabled": {
      "opacity": "0.5",
      "cursor": "not-allowed"
    },
    "submitIcon": {
      "width": "{core.spacing.size.06}",
      "height": "{core.spacing.size.06}"
    },
    "quickActions": {
      "display": "flex",
      "flexWrap": "wrap",
      "gap": "{core.spacing.size.04}"
    },
    "quickActionButton": {
      "fontSize": "{semantic.typography.caption.03}",
      "height": "{core.spacing.size.07}"
    },
    "quickActionIcon": {
      "width": "{core.spacing.size.05}",
      "height": "{core.spacing.size.05}",
      "marginRight": "{core.spacing.size.02}"
    },
    "suggestions": {
      "fontSize": "{semantic.typography.caption.03}",
      "color": "{semantic.color.foreground.secondary}",
      "paddingTop": "{core.spacing.size.05}",
      "borderTop": "1px solid {semantic.color.border.subtle}",
      "opacity": "0.3"
    },
    "suggestionsTitle": {
      "marginBottom": "{core.spacing.size.05}",
      "fontWeight": "{semantic.typography.fontWeight.medium}",
      "color": "{semantic.color.foreground.primary}",
      "opacity": "0.7"
    },
    "suggestionsGrid": {
      "display": "grid",
      "gridTemplateColumns": "1fr 1fr",
      "gap": "{core.spacing.size.04}"
    },
    "suggestionButton": {
      "fontSize": "{semantic.typography.caption.03}",
      "height": "{core.spacing.size.08}",
      "paddingX": "{core.spacing.size.05}",
      "textAlign": "left",
      "justifyContent": "flex-start",
      "color": "{semantic.color.foreground.secondary}",
      "background": "transparent",
      "border": "1px solid transparent",
      "transition": "all 0.2s ease"
    },
    "suggestionButtonHover": {
      "color": "{semantic.color.foreground.primary}",
      "background": "{semantic.color.background.secondary}",
      "borderColor": "{semantic.color.border.subtle}"
    }
  }
}
