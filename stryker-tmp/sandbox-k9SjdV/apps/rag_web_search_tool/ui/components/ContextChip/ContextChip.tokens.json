{
  "$schema": "../../../ui/designTokens/designTokens.schema.json",
  "prefix": "contextChip",
  "tokens": {
    "container": {
      "display": "inline-flex",
      "alignItems": "center",
      "gap": "{core.spacing.size.04}",
      "background": "{semantic.color.background.accent}",
      "border": "{semantic.color.border.accent}",
      "borderRadius": "{semantic.shape.radius.medium}",
      "paddingX": "{core.spacing.size.05}",
      "paddingY": "{core.spacing.size.04}",
      "fontSize": "{semantic.typography.body.small.fontSize}"
    },
    "content": {
      "display": "flex",
      "alignItems": "center",
      "gap": "{core.spacing.size.04}",
      "minWidth": "0"
    },
    "sourceIcon": {
      "fontSize": "{semantic.typography.caption.03}"
    },
    "fileIcon": {
      "width": "{core.spacing.size.05}",
      "height": "{core.spacing.size.05}",
      "color": "{semantic.color.foreground.accent}",
      "flexShrink": "0"
    },
    "title": {
      "fontWeight": "{semantic.typography.fontWeight.medium}",
      "color": "{semantic.color.foreground.accent}",
      "overflow": "hidden",
      "textOverflow": "ellipsis",
      "whiteSpace": "nowrap",
      "maxWidth": "150px"
    },
    "badge": {
      "fontSize": "{semantic.typography.caption.03}",
      "borderColor": "{semantic.color.border.accent}",
      "color": "{semantic.color.foreground.accent}"
    },
    "removeButton": {
      "height": "{core.spacing.size.06}",
      "width": "{core.spacing.size.06}",
      "padding": "0",
      "background": "transparent",
      "color": "{semantic.color.foreground.accent}",
      "transition": "all 0.2s ease"
    },
    "removeButtonHover": {
      "background": "{semantic.color.background.accentHover}",
      "color": "{semantic.color.foreground.accentHover}"
    },
    "removeIcon": {
      "width": "{core.spacing.size.05}",
      "height": "{core.spacing.size.05}"
    }
  }
}
