{
  "name": "SearchInput",
  "layer": "compound",
  "anatomy": [
    "container",
    "form",
    "inputWrapper",
    "searchIcon",
    "input",
    "submitButton",
    "description"
  ],
  "variants": {
    "size": ["initial", "compact"]
  },
  "states": ["default", "focused", "loading", "disabled"],
  "slots": {
    "input": {
      "required": true,
      "description": "Main search input field"
    },
    "submitButton": {
      "required": true,
      "description": "Submit button for search"
    },
    "description": {
      "required": false,
      "description": "Optional description text below input"
    }
  },
  "a11y": {
    "role": "search",
    "labeling": ["aria-label", "aria-labelledby"],
    "keyboard": [
      {
        "key": "Enter",
        "when": "input focused",
        "then": "submit search"
      },
      {
        "key": "Escape",
        "when": "input focused",
        "then": "clear input"
      },
      {
        "key": "Tab",
        "when": "input focused",
        "then": "move to submit button"
      }
    ],
    "apgPattern": "searchbox",
    "description": "Search input with submit button. Supports keyboard navigation and screen readers."
  },
  "tokens": {
    "container": [
      "searchInput.container.width",
      "searchInput.containerInitial.maxWidth",
      "searchInput.containerCompact.maxWidth"
    ],
    "inputWrapper": [
      "searchInput.inputWrapper.background",
      "searchInput.inputWrapper.border",
      "searchInput.inputWrapper.borderRadius",
      "searchInput.inputWrapper.shadow"
    ],
    "input": [
      "searchInput.input.fontSize",
      "searchInput.input.color",
      "searchInput.input.paddingLeft",
      "searchInput.input.paddingRight"
    ]
  },
  "ssr": {
    "hydrateOn": "interaction"
  },
  "rtl": {
    "flipIcon": true,
    "flipLayout": true
  }
}
